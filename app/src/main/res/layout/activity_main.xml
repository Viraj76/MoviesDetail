<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llSearchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_margin="5dp"
        >
        <EditText
            android:id="@+id/etSearchBox"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:focusable="true"
            android:background="@drawable/search_box_back"
            android:hint="Search Movie"
            />
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow"
            app:tint= "@color/black"

            android:background="@color/g_grey"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMovieImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/llSearchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/gBlack"
        android:src="@color/gBlack"
        />
    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivMovieImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="57584"
        android:textStyle="bold"
        android:textSize="40dp"


        />
</androidx.constraintlayout.widget.ConstraintLayout>